<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.snapchat">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="SnapSongs"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"

        android:theme="@style/AppTheme">
        <activity android:name=".FleetingStory"
            android:screenOrientation="portrait"/>
        <activity android:name=".ShowMusicActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".loginRegistration.RegistrationActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".loginRegistration.LoginActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".loginRegistration.ChooseLoginRegistrationActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".DisplaySongActivity"
            android:screenOrientation="portrait"/>


        <activity android:name=".loginRegistration.SplashScreenActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity"
            android:screenOrientation="portrait"/>
    </application>

</manifest>